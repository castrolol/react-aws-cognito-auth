{
  "name": "ysauth",
  "version": "1.0.0",
  "description": "This is an Amplify Auth helper",
  "main": "lib/YsAuth.js",
  "types": "lib/YsAuth.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
