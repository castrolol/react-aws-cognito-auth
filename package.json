    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@aws-amplify/auth": "^4.3.20",
    "aws-amplify": "^4.3.12",
    "react": "^17.0.2",
    "react-idle-timer": "^4.6.4",
    "recoil": "^0.5.2"
  }
